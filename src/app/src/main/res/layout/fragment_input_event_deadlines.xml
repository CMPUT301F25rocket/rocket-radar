<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/inputEventDetailsRegistrationTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Period"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEventDetailsRegistrationStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputEventDetailsRegistrationTextview"
            app:layout_constraintEnd_toStartOf="@id/inputEventDetailsRegistrationEndDate"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEventDetailsRegistrationEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputEventDetailsRegistrationTextview"
            app:layout_constraintStart_toEndOf="@id/inputEventDetailsRegistrationStartDate"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/inputEventDetailsSelectionTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Selection Period"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEventDetailsSelectionStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputEventDetailsSelectionTextview"
            app:layout_constraintEnd_toStartOf="@id/inputEventDetailsSelectionEndDate"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEventDetailsSelectionEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputEventDetailsSelectionTextview"
            app:layout_constraintStart_toEndOf="@id/inputEventDetailsSelectionStartDate"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/inputEventDetailsFinalDecisionTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Decision on Attendees"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEventDetailsFinalDecisionStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputEventDetailsFinalDecisionTextview"
            app:layout_constraintEnd_toStartOf="@id/inputEventDetailsFinalDecisionEndDate"
            app:layout_constraintStart_toStartOf="parent"
            />
        <!-- Just a spacer view -->
        <View
            android:id="@+id/inputEventDetailsFinalDecisionEndDate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/inputEventDetailsFinalDecisionTextview"
            app:layout_constraintStart_toEndOf="@id/inputEventDetailsFinalDecisionStartDate"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>